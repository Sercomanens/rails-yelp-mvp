<h1>New Review</h1>
<div class="container text-center">
  <%= simple_form_for [@restaurant, @review], method: :post do |f| %>
    <div class="form-inputs">
      <%= f.input :content %>
      <%= f.input :rating %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Create Review", class: "btn btn-primary" %>
    </div>
  <% end %>
<%= link_to 'Back to Restaurant', restaurant_path(@restaurant) %>
