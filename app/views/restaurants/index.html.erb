<h1>All Restaurants 👩‍🍳</h1>
<div>
  <ul>
    <% @restaurants.each do |restaurant| %>
      <li>
        <%= restaurant.name %>
        <%= link_to 'View Restaurant', restaurant_path(restaurant) %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Add New Restaurant', new_restaurant_path, class: 'btn btn-primary' %>
</div>
