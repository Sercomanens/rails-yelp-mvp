<h1>New Restaurant</h1>
<div class="container text-center">
    <%= simple_form_for @restaurant do |f| %>
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category, collection: Restaurant::VALID_CATEGORIES, prompt: "Select a category" %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Create Restaurant" %>
   </div>
<% end %>

  <% if @restaurant.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>
    <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <br>

  <div>
    <%= link_to 'Back to restaurants', restaurants_path, class: "btn btn-secondary" %>
  </div>
</div>
